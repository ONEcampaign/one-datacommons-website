### OVERVIEW ###
categories {
  title: "The basics"
  description: "Explore headline data on economic activity, including income distribution and the value of goods and services produced."

  # GINI Index
  blocks {
    title: "Income inequality"
    description: "The Gini Index measures income equality within an economy by looking at how income is distributed throughout the population. A higher Gini score means there is more inequality: a small number of individuals hold a higher share of income. A score of zero represents perfect income equality."
    columns {
      tiles {
        type: RANKING
        ranking_tile_spec {
          show_highest: true
          show_lowest: true
          highest_title: "Highest Gini Index in Africa"
          lowest_title: "Lowest Gini Index in Africa"
        }
        stat_var_key: "GiniIndex_EconomicActivity"
      }
    }
    columns {
      tiles {
        type: MAP
        title: "Income inequality (Gini Index ${date})"
        stat_var_key: "GiniIndex_EconomicActivity"
      }
    }
  }

  # GDP per capita
  blocks {
    title: "Gross domestic product (GDP) per capita"
    description: "GDP per capita measures the total value of the goods and services produced in a country by its population. It is used as a broad measure of the average living standard of a country; however, a high GDP per capita does not necessarily mean people have a higher standard of living."

    columns {
      tiles {
        type: RANKING
        ranking_tile_spec {
          show_highest: true
          show_lowest: true
        }
        stat_var_key: "Amount_EconomicActivity_GrossDomesticProduction_Nominal_PerCapita"
      }
    }
    columns {
      tiles {
        type: MAP
        title: "Nominal GDP Per Capita (${date})"
        stat_var_key: "Amount_EconomicActivity_GrossDomesticProduction_Nominal_PerCapita"
      }
    }
  }

  # GDP growth rate
  blocks {
    title: "Gross domestic product (GDP) growth rate"
    description: "The GDP growth rate measures how much a country’s economic output has grown or shrunk – essentially, an economy’s expansion or contraction during a specific period of time."

    columns {
      tiles {
        type: RANKING
        ranking_tile_spec {
          show_highest: true
          show_lowest: true
        }
        stat_var_key: "GrowthRate_Amount_EconomicActivity_GrossDomesticProduction"
      }
    }
    columns {
      tiles {
        type: MAP
        title: "Growth Rate of GDP (${date})"
        stat_var_key: "GrowthRate_Amount_EconomicActivity_GrossDomesticProduction"
      }
    }
  }

  # Inflation
  blocks {
    title: "Inflation rate"
    description: "Inflation rates tell you how much consumer prices have increased over a specified period of time. It is like a speedometer for prices: high inflation means your money buys you less than before and low inflation means prices are steady and your money retains its value."

    columns {
      tiles {
        type: RANKING
        ranking_tile_spec {
          show_highest: true
          show_lowest: true
        }
        stat_var_key: "inflationPercentAverageConsumerPrices"
      }
    }
    columns {
      tiles {
        type: MAP
        title: "Inflation (% average consumer prices) (${date})"
        stat_var_key: "inflationPercentAverageConsumerPrices"
      }
    }
  }

  ## Stat var spec overview section
  stat_var_spec {
    key: "GiniIndex_EconomicActivity"
    value {
      stat_var: "GiniIndex_EconomicActivity"
      name: "Gini Index"
    }
