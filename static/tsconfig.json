{
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "lib": ["dom", "ES2021"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "CommonJS",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "paths": {
      "theme": ["js/theme/dc_custom_theme", "js/theme/base_theme"],
      "theme/*": ["js/theme/dc_custom_theme/*", "js/theme/base_theme/*"]
    }
  },
  "exclude": [
    "node_modules",
    "./**/*.test.ts",
    "./**/*.test.tsx",
    "./**/mock_functions.ts",
    "./**/mock_functions.tsx"
  ]
}
